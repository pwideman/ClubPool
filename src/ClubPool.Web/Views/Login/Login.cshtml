@model ClubPool.Web.Controllers.Login.LoginViewModel

@{
    ViewBag.Title = "Login";
}

<div class="heading">
  @Html.ContentImage("logoff.png", "Login")
  <span>Login</span>
</div>
@if (TempData.ContainsKey(GlobalViewDataProperty.PageErrorMessage)) {
  @Html.Partial("_ErrorMessage")
}
<div>
  <div class="form-content login-form corner">
    @using (var form = Html.BeginForm("Login", "Login", FormMethod.Post, new { @class = "normal", id = "loginForm" })) {
      @Html.Partial("_LoginControl")
    }
  </div>
</div>
