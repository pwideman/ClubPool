<viewdata model="ClubPool.Web.Controllers.UserLoginViewModel"/>

<content name="title">Login</content>

<p if="!string.IsNullOrEmpty(Model.Message)" class="error">${Model.Message}</p>

<h4>Login</h4>
<form method="post">
	<fieldset>
		!{this.Hidden(m => m.ReturnUrl)}
		!{this.TextBox(m => m.Username).Label("Username:")}
		!{this.TextBox(m => m.Password).Label("Password:")}
		!{this.SubmitButton("Login")}
	</fieldset>
</form>