<?xml version="1.0" encoding="utf-8" ?>
<configuration>
	<configSections>
		<section name="log4net" type="log4net.Config.Log4NetConfigurationSectionHandler,log4net" />
	</configSections>

	<appSettings>
		<!-- Accepts a comma delimited list of assembly names containing mapping artifacts; the ".dll" is optional -->
		<add key="nhibernate.mapping.assembly" value="ClubPool.Data" />
	</appSettings>

	<log4net>
		<appender name="LogToFile" type="log4net.Appender.FileAppender">
			<file value="../../logs/ClubPool.Tests.log"/>
			<appendToFile value="false"/>
			<layout type="log4net.Layout.PatternLayout">
				<conversionPattern value="%d [%t] %-5l - %m%n%n"/>
			</layout>
		</appender>
		<appender name="ConsoleAppender" type="log4net.Appender.ConsoleAppender">
			<layout type="log4net.Layout.PatternLayout">
				<conversionPattern value="%d [%t] %-5l - %m%n%n"/>
			</layout>
		</appender>
		<root>
			<!-- Value of priority may be ALL, DEBUG, INFO, WARN, ERROR, FATAL, OFF -->
			<priority value="DEBUG"/>
			<appender-ref ref="ConsoleAppender"/>
		</root>
	</log4net>
  <runtime>
  </runtime>
  <system.web>
    <roleManager enabled="true" defaultProvider="TestClubPoolRoleProvider">
      <providers>
        <add name="TestClubPoolRoleProvider"
             type="Tests.ClubPool.Web.Security.TestDoubles.TestClubPoolRoleProvider, ClubPool.Tests"/>
      </providers>
    </roleManager>
    <membership defaultProvider="TestClubPoolMembershipProviderWithHashedPasswordFormat">
      <providers>
        <add name="TestClubPoolMembershipProviderWithHashedPasswordFormat"
             type="Tests.ClubPool.Web.Security.TestDoubles.TestClubPoolMembershipProvider, ClubPool.Tests"
             passwordFormat="Hashed"/>
        <add name="TestClubPoolMembershipProviderWithClearPasswordFormat"
             type="Tests.ClubPool.Web.Security.TestDoubles.TestClubPoolMembershipProvider, ClubPool.Tests"
             passwordFormat="Clear"/>
      </providers>
    </membership>
  </system.web>
</configuration>
